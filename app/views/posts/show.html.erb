<h1><%= @post.title %></h1>
<h2><%= @post.content %></h2>
<h3>
    <% @post.categories.each do |cat| %>
        <%= cat.name %>
    <% end %>
</h3>
<% @post.comments.each do |comment| %>
    <%= comment.content %>
<% end %>

<% @post.users.uniq.each do |user| %>
    <%= user.username %>
<% end %>


